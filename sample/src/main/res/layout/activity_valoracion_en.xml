<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d7132b"
    android:layout_gravity="center_horizontal"
    android:id="@+id/absParent"
    android:clickable="true"
    android:focusableInTouchMode="true" >

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="140dp"
        android:background="@drawable/shape"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="105dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"></LinearLayout>


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/radio_muymal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     " />

        <RadioButton
            android:id="@+id/radio_mal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:text="     " />

        <RadioButton
            android:id="@+id/radio_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:text="     " />

        <RadioButton
            android:id="@+id/radio_bien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:text="     " />

        <RadioButton
            android:id="@+id/radio_muybien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:text="     " />

    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bad"
        android:textSize="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="280dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good"
        android:textSize="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="950dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1                   2                   3                  4                  5"
        android:textSize="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="160dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="373dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How was your visit to Marcos Group*"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="270dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="200dp"
        android:background="@drawable/shape"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"></LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Put us your opinion to keep improving"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="320dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="270dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/in_valoracion"
        android:layout_width="700dp"
        android:layout_height="60dp"
        android:hint="Your answer"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="360dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="270dp"
        android:inputType="textMultiLine"
        tools:ignore="MissingConstraints"></EditText>

    <Button
        android:id="@+id/btnEnviarForm"
        android:layout_width="100dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="540dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="250dp"
        android:text="Send"
        android:textColor="#ffffff"
        android:background="#000000"
        tools:ignore="MissingConstraints"></Button>

    <Button
        android:id="@+id/btnSalirForm"
        android:layout_width="100dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="540dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="940dp"
        android:text="Exit"
        android:textColor="#ffffff"
        android:background="#000000"
        tools:ignore="MissingConstraints"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>